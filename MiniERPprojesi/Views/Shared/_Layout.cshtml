@{
    Layout = null;
    var rol = Session["rol"]?.ToString();
    var kullaniciAd = Session["kullaniciAd"]?.ToString() ?? "Kullanıcı";

    string anaSayfaUrl = "/Home/Index";
    if (rol == "Admin")
    {
        anaSayfaUrl = "/Admin/Index";
    }
    else if (rol == "Ürün ve Stok Sorumlusu")
    {
        anaSayfaUrl = "/UrunStok/Index";
    }
    else if (rol == "Sipariş ve Faturalama Sorumlusu")
    {
        anaSayfaUrl = "/SiparisFatura/Index";
    }

    var sayfaUrl = Request.Url.AbsolutePath.ToLower();

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Uyum ERP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link rel="stylesheet" href="~/Content/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" />
    <link rel="stylesheet" href="~/Content/plugins/icheck-bootstrap/icheck-bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/plugins/jqvmap/jqvmap.min.css" />
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/Content/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" />
    <link rel="stylesheet" href="~/Content/plugins/daterangepicker/daterangepicker.css" />
    <link rel="stylesheet" href="~/Content/plugins/summernote/summernote-bs4.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" />

    <style>
        .brand-link {
            padding-top: 8px !important;
            padding-bottom: 8px !important;
            height: 65px !important;
        }

        .user-panel {
            padding-left: 15px !important;
        }

        .main-sidebar {
            background-color: #1e2a38 !important;
        }

            .main-sidebar .nav-link,
            .main-sidebar .nav-header {
                color: #ffffff !important;
            }

                .main-sidebar .nav-link:hover {
                    background-color: #263445 !important;
                }

        /* Ana Sayfa, İletişim ve kullanıcı adı ile ikonlarının rengi */
        .main-header .navbar-nav > .nav-item > .nav-link:not(.text-danger),
        .main-header .navbar-nav > .nav-item > .nav-link:not(.text-danger) i {
            color: #1e2a38 !important;
        }
    </style>


</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@anaSayfaUrl" class="nav-link">Ana Sayfa</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Kullanici/Iletisim" class="nav-link @(sayfaUrl == "/kullanici/iletisim" ? "active" : "")">İletişim</a>
                </li>

            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Kullanici/Profil">
                        <i class="fas fa-user"></i> @kullaniciAd
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" href="/Giris/Cikis">
                        <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                    </a>
                </li>

            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="@anaSayfaUrl" class="brand-link d-flex align-items-center justify-content-center">
                <img src="@Url.Content("~/Content/dist/img/uyumerpson.png")"
                     alt="UYUM ERP"
                     style="height: 110px; width: auto;" />
            </a>



            <div class="sidebar">
                @{
                    string fotoUrl = Session["profilFotoUrl"]?.ToString() ?? "~/Content/dist/img/user2-160x160.jpg";
                }

                <div class="user-panel mt-3 pb-3 mb-3 d-flex align-items-center">
                    <a href="/Kullanici/Profil" class="d-flex align-items-center text-white text-decoration-none">
                        <img src="@Url.Content(Session["profilFotoUrl"]?.ToString() ?? "~/Content/dist/img/user2-160x160.jpg")"
                             class="img-circle elevation-2 mr-2"
                             alt="Profil"
                             style="width: 40px; height: 40px; object-fit: cover;" />
                        <span style="font-size: 16px;">@Session["kullaniciAd"]</span>
                    </a>
                </div>


                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                    <li class="nav-item">
                        <a href="@anaSayfaUrl" class="nav-link">
                            <i class="nav-icon fas fa-home"></i>
                            <p>Ana Sayfa</p>
                        </a>
                    </li>

                    @if (rol == "Admin")
                    {
                        <li class="nav-item has-treeview menu-close">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-users-cog"></i>
                                <p>
                                    Kullanıcı Yönetimi
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Kullanici/Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Kullanıcı Listesi</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Kullanici/SistemKullanimRaporu" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Sistem Kullanım Raporu</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }


                    @if (rol == "Admin" || rol == "Ürün ve Stok Sorumlusu")
                    {
                        <li class="nav-header">Ürün ve Stok Yönetimi</li>

                        <li class="nav-item">
                            <a href="/Depo" class="nav-link">
                                <i class="nav-icon fas fa-warehouse"></i>
                                <p>Depolar</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Kategori" class="nav-link">
                                <i class="nav-icon fas fa-tags"></i>
                                <p>Kategoriler</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Urun" class="nav-link">
                                <i class="nav-icon fas fa-box"></i>
                                <p>Ürünler</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/StokHareketleri" class="nav-link">
                                <i class="nav-icon fas fa-exchange-alt"></i>
                                <p>Stok Hareketleri</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/DepoStok" class="nav-link">
                                <i class="nav-icon fas fa-chart-bar"></i>
                                <p>Depo Stok Durumu</p>
                            </a>
                        </li>
                    }

                    @if (rol == "Admin" || rol == "Siparis ve Faturalama Sorumlusu")
                    {
                        <li class="nav-header">Sipariş ve Faturalama Yönetimi</li>

                        <li class="nav-item">
                            <a href="/Urun/IndexSiparisFaturalama" class="nav-link">
                                <i class="nav-icon fas fa-box-open"></i>
                                <p>Ürünler</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Musteri" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Müşteriler</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Siparis" class="nav-link">
                                <i class="nav-icon fas fa-shopping-cart"></i>
                                <p>Siparişler</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Fatura" class="nav-link">
                                <i class="nav-icon fas fa-file-invoice"></i>
                                <p>Faturalar</p>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </aside>

        <!-- İçerik -->
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid pt-3">
                    <div class="row justify-content-center">
                        <div class="col-md-10">

                            @*  Sadece ana sayfalarda hava durumu *@
                            @if (sayfaUrl.StartsWith("/admin") || sayfaUrl.StartsWith("/urunstok") || sayfaUrl.StartsWith("/siparisfatura"))
                            {
                                <div class="alert alert-info d-flex justify-content-between align-items-center p-2 mb-3">
                                    <div>
                                        🌤️ <strong style="font-size: 15px;">Hava Durumu:</strong>
                                        <span id="havaBilgi" style="font-size: 15px;">Yükleniyor...</span>
                                    </div>
                                    <img id="havaIkon" src="" style="width:32px; height:32px;" />
                                </div>
                            }


                            @RenderBody()
                            @RenderSection("body", required: false)
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>&copy; 2025 Mini ERP</strong> Tüm hakları saklıdır.
        </footer>

        <aside class="control-sidebar control-sidebar-dark"></aside>
    </div>

    <!-- AdminLTE JS -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <script src="~/Content/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Content/plugins/sparklines/sparkline.js"></script>
    <script src="~/Content/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/Content/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <script src="~/Content/plugins/jquery-knob/jquery.knob.min.js"></script>
    <script src="~/Content/plugins/moment/moment.min.js"></script>
    <script src="~/Content/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/Content/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Content/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/Content/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/Content/dist/js/adminlte.js"></script>

    @*  Hava durumu sadece ana sayfalarda *@
    @if (sayfaUrl.StartsWith("/admin") || sayfaUrl.StartsWith("/urunstok") || sayfaUrl.StartsWith("/siparisfatura"))
    {
        <script>
            $(function () {
                $.getJSON('/Weather/GetWeather?sehir=Istanbul', function (d) {
                    $('#havaBilgi').text(`${d.name}: ${d.main.temp}°C, ${d.weather[0].description}`);
                    $('#havaIkon').attr("src", "http://openweathermap.org/img/w/" + d.weather[0].icon + ".png");
                });
            });
        </script>
    }
    @RenderSection("Scripts", required: false)
</body>
</html>
