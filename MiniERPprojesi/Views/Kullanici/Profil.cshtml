@model MiniERPprojesi.Models.Kullanicilar

@{
    ViewBag.Title = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h2>Profilim</h2>
</section>

<section class="content">
    <div class="card p-4 w-50 mx-auto shadow-lg">

        <form method="post" action="/Kullanici/ProfilGuncelle" enctype="multipart/form-data">
            <!-- Gerekli: Kullanıcı ID -->
            <input type="hidden" name="KullaniciID" value="@Model.KullaniciID" />

            <!-- Fotoğraf ve Dosya Seç -->
            <div class="text-center mb-3">
                <img src="@Url.Content(Model.ProfilFotoUrl ?? "~/Content/dist/img/user2-160x160.jpg")"
                     alt="Profil Fotoğrafı"
                     class="rounded-circle mb-2"
                     width="120"
                     height="120" />

                <div>
                    <label class="btn btn-outline-secondary">
                        📁 Dosya Seç
                        <input type="file" name="profilFoto" class="d-none" accept=".jpg,.jpeg,.png" />
                    </label>
                </div>
            </div>

            <!-- Şifre ve Güncelle Butonu -->
            <div class="form-group d-flex align-items-center">
                <label for="SifreHash" class="mr-2 font-weight-bold">Yeni Şifre:</label>
                <input type="password" name="SifreHash"
                       class="form-control mr-2"
                       placeholder="Yeni şifrenizi girin"
                       style="width: 250px;" />
                <button type="submit" class="btn" style="background-color: #ffc107; color: black;">
                    Güncelle
                </button>
            </div>
        </form>

        <!-- Kullanıcı Bilgileri -->
        <table class="table mt-4">
            <tr>
                <th>Ad Soyad</th>
                <td>@Model.Ad @Model.Soyad</td>
            </tr>
            <tr>
                <th>Kullanıcı Adı</th>
                <td>@Model.KullaniciAdi</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Rol</th>
                <td>@(Model.Roller != null ? Model.Roller.RolAdi : "Rol atanmadı")</td>
            </tr>
        </table>
    </div>
</section>
